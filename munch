#!/bin/bash
#
# Munch ... create a bootable iso with persistence
# by Mr Green
# 

set -o nounset

usage()
{
printf "Usage: %s: [sdx] [iso_file_name] \n" $(basename $0) >&2
exit 2
}

# test for number of args
[ $# -ne 2 ] && usage

# test if $1 is a usb valid drive
sys_path=/sys/block/${1}
if [ -f ${sys_path}/removable ] \
   && cat ${sys_path}/removable 2>/dev/null | grep -qF '1' \
   && cat ${sys_path}/device/uevent 2>/dev/null | grep -qF 'DRIVER=sd'
then
   usb_device=/dev/${1}
else
	echo "${1} is not a valid usb device!"
   usage
	exit 2
fi

exit

# Is $1 a block device?
#[[ -b /dev/${1} ]] && usb_device=/dev/${1} || usage

# Is $2 a valid filename?
[[ -f ${2} ]] && iso_name=${2} || usage

# Path to syslinux
usb_syslinux=/mnt/usb/arch/boot/syslinux

# Mount,loop,copy
mkdir -p /mnt/{usb,iso}
mount -o loop ${iso_name} /mnt/iso
mount ${usb_device}1 /mnt/usb
cp -r /mnt/iso/* /mnt/usb

# Adjust syslinux and create persistence
extlinux --install ${usb_syslinux}
dd bs=440 conv=notrunc count=1 if=/usr/lib/syslinux/mbr.bin of=${usb_device}

# Boot device and create persistence  
usb_uuid="/dev/disk/by-uuid/$(lsblk -no UUID ${usb_device}1)"
sed -i "s|label.* |device=${usb_uuid} cow_device=${usb_uuid} |" ${usb_syslinux}/syslinux.cfg

# Clean up
# possible error?
chattr -i ${usb_syslinux}/ldlinux.sys
# rm /boot/syslinux/ldlinux.sys
umount /mnt/{usb,iso}
rmdir /mnt/usb
rmdir /mnt/iso


